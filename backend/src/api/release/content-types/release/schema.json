{
  "kind": "collectionType",
  "collectionName": "releases",
  "info": {
    "singularName": "release",
    "pluralName": "releases",
    "displayName": "Release",
    "description": "Music releases (albums, EPs, singles)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "artist": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::artist.artist"
    },
    "releaseDate": {
      "type": "date",
      "required": true
    },
    "coverArt": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "type": {
      "type": "enumeration",
      "enum": ["album", "ep", "single"],
      "required": true
    },
    "tracks": {
      "type": "component",
      "repeatable": true,
      "component": "music.track"
    },
    "streamingLinks": {
      "type": "component",
      "repeatable": false,
      "component": "music.streaming-links"
    }
  }
}
